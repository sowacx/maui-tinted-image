<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TintedImageCheck.Test_Image"
             xmlns:controls="clr-namespace:TintedImageCheck.Controls"
             xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="Test_Image">
    <VerticalStackLayout>
        <Image Source="close.png"  HeightRequest="80" WidthRequest="80" >
            <Image.Behaviors>
                <mct:IconTintColorBehavior TintColor="Orange" />
            </Image.Behaviors>
        </Image>
        <controls:TintedImage Source="close.png" TintColor="Blue">
        </controls:TintedImage>
    </VerticalStackLayout>
</ContentPage>
